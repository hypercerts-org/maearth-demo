# Base URL of this app (must match the deployment domain for OAuth to work)
# Production: https://maearth-demo.vercel.app
# Staging:    https://maearth-demo-git-staging-<team>.vercel.app
# Local:      http://localhost:3000
PUBLIC_URL=http://localhost:3000

# PDS endpoints
PDS_URL=https://pds.certs.network
AUTH_ENDPOINT=https://auth.pds.certs.network/oauth/authorize

# PLC directory for DID-to-handle resolution
PLC_DIRECTORY_URL=https://plc.directory

# Wallet service
WALLET_SERVICE_URL=
WALLET_API_KEY=

# Session & CSRF secrets (generate with: openssl rand -base64 32)
SESSION_SECRET=
CSRF_SECRET=

# Rate limiting (requests per minute)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_TRANSACTION=5

# Transaction limits (ETH)
MAX_TRANSACTION_AMOUNT=0.1
MAX_DAILY_AMOUNT=1.0
